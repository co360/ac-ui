<%- include('head') %>
<%- include('header', user) %>
<div class="container" >
    
    <div class="row">
        <div class="col-md-6 p-0">
            <%- include('tabs', {user:user}) %>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6 p-0" id="divPosts">

          <% if(posts) {
            posts.forEach(function(post){
              post.user_activity_type=false;
          %>
              <%- include('single_post', post); %>
          <% }) } %>  

          <% if(user && activities) {
            activities.forEach(function(post){ %>
              <%- include('single_post', post); %>
          <% }) } %>
            
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 text-center">
          <a href="<%= type ? '/type/'+type : '/'%>" class="btn btn-danger pl-5 pr-5 text-light" id="btnLoadMorePosts" data-offset="11">Load more posts</a>
        </div>
    </div>
</div>
<br>    
<%- include('footer') %>