<%- include('head') %>
<%- include('header') %>    
<%- include('left_nav') %>

<div class="col-md-10" style="padding-top:20px">
    <h1>Settings</h1>
    
    <hr />

    <ul class="nav nav-tabs">
        <li class="active"><a href="/settings">Adresses</a></li>
        <li><a href="/settings/kyc">KYC</a></li>
        <li><a href="/settings/profile">Profile</a></li>
        <li><a href="#">2FA</a></li>
    </ul>

    <br><h3>Please Enter BTC & ETH Addresses</h3><br>
    
    <% if(msg) { %>
      <div class="alert alert-danger text-center alert-dismissible">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <b><%- msg %></b>
      </div>                
  <% } %>    

    <form class="form-horizontal col-md-8" action="/settings/addresses" method="POST">
        
        <div class="form-group">
          <label class="control-label col-sm-2" for="btc_address">BTC Address</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="btc_address" name="btc_address" value = "<%- user.userAddresses.btc_address %>">
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-sm-2" for="eth_address">ETH Address</label>
          <div class="col-sm-10"> 
            <input type="text" class="form-control" id="eth_address" name="eth_address" value = "<%- user.userAddresses.eth_address %>">
          </div>
        </div>
        
        <div class="form-group"> 
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Submit</button>
          </div>
        </div>

    </form>
      
</div>

<%- include('footer') %>
