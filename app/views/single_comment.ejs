<div class="media p-1">
    <div class="media-body">
        <% if(image) {%>
        <img src="<%= image %>" alt="<%= username %>" class="mr-3 rounded-circle float-left" style="width:40px;">
        <% } else {%>
            <i class="fas fa-user-circle fa-3x float-left mr-3"></i>
        <% } %>
        <h5><a href="<%= app.config.host + '/user/' + username %>" class="text-dark"><%= username %></a> <br><small><i class="small">Posted <%= new Date(created).toDateString() %></i></small></h5>
        <p><%= comment %></p>
    </div>
</div>